<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#600206"
tools:context=".Calculadora">

    <TextView
        android:id="@+id/tvTituloNumeroCalculadora"
        android:layout_width="236dp"
        android:layout_height="38dp"
        android:text="@string/tvTituloNumeroCalculadora"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="363dp"
        android:layout_height="207dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tbCalculadora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloNumeroCalculadora"
        app:layout_constraintVertical_bias="0.262">

        <ImageView
            android:id="@+id/iCalculadora"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/calculadora" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvIntruduceNumeroCalculadora"
        android:layout_width="313dp"
        android:layout_height="33dp"
        android:text="@string/tvIntruduceNumeroCalculadora"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <EditText
        android:id="@+id/etNumeroCalculadoraIntroducido"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:backgroundTint="#FAF8F8"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68" />

    <EditText
        android:id="@+id/etNumeroCalculadoraIntroducido2"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:backgroundTint="#FAF8F8"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />

    <Button
        android:id="@+id/bSumarCalculadora"
        android:layout_width="56dp"
        android:layout_height="51dp"
        android:backgroundTint="#11A9ED"
        android:onClick="calculadoraSumar"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.639" />

    <Button
        android:id="@+id/bRestarCalculadora"
        android:layout_width="56dp"
        android:layout_height="51dp"
        android:backgroundTint="#11A9ED"
        android:onClick="calculadoraRestar"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.754"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.639" />

    <Button
        android:id="@+id/bMultiplicarCalculadora"
        android:layout_width="56dp"
        android:layout_height="51dp"
        android:backgroundTint="#11A9ED"
        android:onClick="calculadoraMultiplicar"
        android:text="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />

    <Button
        android:id="@+id/bDividirCalculadora"
        android:layout_width="56dp"
        android:layout_height="51dp"
        android:backgroundTint="#11A9ED"
        android:onClick="calculadoraDividir"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.639" />

    <TextView
        android:id="@+id/tvTextoResultadoCalculadora"
        android:layout_width="183dp"
        android:layout_height="43dp"
        android:backgroundTint="#08CDBB"
        android:text="@string/tvTextoResultado"
        android:textAlignment="center"
        android:textColor="#BE07DD"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821" />

    <TextView
        android:id="@+id/tvResultadoCalculadora"
        android:layout_width="176dp"
        android:layout_height="43dp"
        android:textAlignment="center"
        android:textColor="#F3DA03"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821" />

    <Button
        android:id="@+id/bVolverCalculadora"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:backgroundTint="#F1DA11"
        android:onClick="cerrarCalculadora"
        android:text="@string/bVolver"
        android:textColor="#0728DF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

    <ToggleButton
        android:id="@+id/tbCalculadora"
        android:layout_width="92dp"
        android:layout_height="27dp"
        android:background="#F8430A"
        android:textOff="@string/tbCalculadora2"
        android:textOn="@string/tbCalculadora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bElevar"
        android:layout_width="56dp"
        android:layout_height="51dp"
        android:backgroundTint="#11A9ED"
        android:onClick="calculadoraElevado"
        android:text="^"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

</androidx.constraintlayout.widget.ConstraintLayout>